  <script>
    function filterCards() {
      const from = document.getElementById('departure').value.toLowerCase();
      const to = document.getElementById('destination').value.toLowerCase();
      const sort = document.getElementById('sort').value;

      let cards = Array.from(document.querySelectorAll('.card'));

      cards.forEach(card => {
        const cardFrom = card.getAttribute('data-from').toLowerCase();
        const cardTo = card.getAttribute('data-to').toLowerCase();
        card.style.display = cardFrom.includes(from) && cardTo.includes(to) ? 'block' : 'none';
      });

      if (sort === 'price-low') {
        cards.sort((a, b) => a.getAttribute('data-price') - b.getAttribute('data-price'));
      } else if (sort === 'price-high') {
        cards.sort((a, b) => b.getAttribute('data-price') - a.getAttribute('data-price'));
      }

      const list = document.getElementById('card-list');
      cards.forEach(card => list.appendChild(card));
    }
  </script>
